<h5 class="card-title" , style="text-align:center">Sign-Up</h5>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  <div class="card">
    <div class="card-body>
      <div class="mb-3">
        <%= f.label :first_name,{class: "form-lable"} %><br />
        <%= f.text_field :first_name, {class: "form-control"}%>
      </div>
      <div class="mb-3">
        <%= f.label :last_name,{class: "form-lable"} %><br />
        <%= f.text_field :last_name,{class: "form-control"}%>
      </div>
      <div class="mb-3">
        <%= f.label :contact,{class: "form-lable"} %><br />
        <%= f.text_field :contact,{class: "form-control"}%>
      </div>
      <div class="mb-3">
        <%= f.select :role_id, options_for_select(Role.all.pluck(:role_name,:id)) %>
      </div>
      <div class="mb-3">
        <%= f.label :email,{class: "form-lable"}  %><br />
        <%= f.email_field :email, {class: "form-control",autofocus: true, autocomplete: "email"}  %>
      </div>
      <div class="mb-3">
        <%= f.label :password,{class: "form-lable"}  %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, {class: "form-control",autofocus: true, autocomplete: "new-password"} %>
      </div>
      <div class="mb-3">
        <%= f.label :password_confirmation,{class: "form-lable"}  %><br />
        <%= f.password_field :password_confirmation, {class: "form-control",autofocus: true, autocomplete: "new-password"}%>
      </div>
      <div class="actions">
        <%= f.submit "Sign up", {class: "btn btn-success"} %>
      </div>
      <div class="flink">
        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
<% end %>
<style>
  .card-title{
    text-align: center;
    background-color: green;
  }
   .card{
    margin-left: 20%;
    margin-right: 20%;

  }
  .actions{
   text-align: center;
  }

  .flink{
   text-align: center;
  }
</style>
