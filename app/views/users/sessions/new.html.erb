<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="card",style="width: 18rem;margin-left: 30%;
  margin-right: 30%;">
    <div class="card-body">
      <h5 class="card-title",style="text-align:center;">Login</h5>
      <div class="mb-3">
        <%= f.label :email, {class: "form-lable"}%><br />
        <%= f.email_field :email, {class: "form-control",autofocus: true, autocomplete: "email"} %>
      </div>
      <div class="field">
        <%= f.label :password , {class: "form-lable"}%><br />
        <%= f.password_field :password, {class: "form-control",autofocus: true, autocomplete: "current_password"} %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <div class="actions">
        <%= f.submit "Log in" ,class:"btn btn-primary" %>
      </div>
    </div>
    <%= render "users/shared/links" %>
  </div>
</div>
</div>
<% end %>
<style>
  .card-title{
    text-align: center;
    background-color: green;
  }
   .card{
    margin-left: 20%;
    margin-right: 20%;

  }
</style>
