<!DOCTYPE html>
<html>
  <head>
    <title>BusBooking</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application.bootstrap", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
     <%@user = current_user%>
     <%if user_signed_in?%>
        <%if @user.role_id== 1%>
          <%= render "shared/admin_navbar" %>
        <%else%>
           <%= render "shared/header" %>
         <%end%>
      <%else%>
        <%= render "shared/header" %>
      <%end%>
    
    <div class="container">
      <div class="row">
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
        <%= yield %>
      </div>
    </div>
    
  </body>
</html>
