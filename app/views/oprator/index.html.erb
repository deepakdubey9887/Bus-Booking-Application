
<div class="header"><h2>bus list created by you</h2></div>


<table class="table">
  <thead>
    <tr>

      <th scope="col">Bus Name</th>
      <th scope="col">boarding</th>
      <th scope="col">Destination</th>
      <th scope="col">No of seats</th>
      <th scope="col">Time</th>
      
  </thead>
  <tbody>
        <% @buses.each do |bus| %>
            <tr>
   
               <td><%= bus.bus_name %></td>
                <td><%= bus.boarding %></td>
                <td><%= bus.destination %></td>
                <td><%= bus.no_of_seats %></td>
                <td><%= bus.time %></td>
              
            </tr>
        <%end%>
   </tbody>

<p>
<%=link_to "create_bus",new_bus_path, class: "btn btn-primary btn lg" %>
</p>


